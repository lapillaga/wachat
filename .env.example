# Configuración de WhatsApp Cloud API
# Obtén estos valores desde la Consola de Desarrollador de Meta después de crear tu app
WHATSAPP_TOKEN=tu_token_de_acceso_temporal_aqui
PHONE_NUMBER_ID=tu_id_de_numero_de_telefono_whatsapp_aqui

# Verificación del Webhook
# Crea una cadena aleatoria segura para la verificación del webhook
VERIFY_TOKEN=tu_token_de_verificacion_personalizado_aqui

# Configuración de OpenAI
# Obtén este desde platform.openai.com
OPENAI_API_KEY=sk-tu_clave_api_openai_aqui

# Vector Store ID para file search
# ID del vector store creado en OpenAI para búsquedas de conocimiento
VECTOR_STORE_ID=vs_tu_vector_store_id_aqui

# Opcional: Indicador del entorno
ENVIRONMENT=development